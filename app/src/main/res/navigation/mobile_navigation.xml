    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.thorin.moviecotalogue.ui.home.FavoriteFragment"
        android:label="@string/Favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.thorin.moviecotalogue.ui.home.ui.notifications.NotificationsFragment"
